{
    "compilerOptions": {
        "target": "es2016",
        "module": "Node16",
        "moduleResolution": "Node16",
        "outDir": "./dist",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "removeComments": true,
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "exactOptionalPropertyTypes": true
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "dist"]
}
